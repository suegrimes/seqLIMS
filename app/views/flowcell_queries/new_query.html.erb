<h1>Sequencing Run Query</h1>

<%= form_for(@flowcell_query, method: :get) do |f| %>
<!--%= f.error_messages(:header_message => "Error(s) in query parameters") %-->
<%= render '/shared/errors', model: @flowcell_query, header_message: 'Error(s) in query parameters' %>

<fieldset class="form">
<legend>Select parameters</legend>
<table class="form">
  <tr>
  	<th>Run Nr:</th>
	<td><%=f.text_field(:run_nr, :size => 6)%>
  	<strong>&nbsp;Run Nr Type:&nbsp;&nbsp;</strong>
	<%= f.select(:run_nr_type, FlowCell::RUN_NR_TYPES) %></td>
  </tr>
  <tr><td align="center" class="grey" colspan="2">-OR-</td></tr>
  <tr>
  	<th>Machine Type:</th>
    <td><%=f.collection_select(:machine_type, @machine_types, :c_value, :c_value, {:include_blank => '(All)'}) %></td>
  </tr> 
  <tr>  	
    <th>Run Dates:&nbsp;</th>
    <td><%=f.datepicker :from_date, dateFormat: "yy-mm-dd", changeMonth: true, changeYear: true, size: 15 %>
    <strong>&nbsp;&nbsp;To:&nbsp;</strong>
	<%=f.datepicker :to_date, dateFormat: "yy-mm-dd", changeMonth: true, changeYear: true, size: 15 %>
	</td> 
  </tr>	
</table>
</fieldset>
<%=raw break_clear(submit_tag "Submit") %>
<%end%>







