<fieldset class="form">
<legend>Diagnosis/Pathology</legend>
<table class="form">
  <tr>
    <%=f.datepicker 'pathology_date', dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true, size: 15, label: 'Path Rpt Date' %>
    <%=f.text_field :pathologist %>
  </tr>
  <tr>
	<%=f.collection_select(:general_pathology, @hpathology, :c_value, :c_value, {:include_blank => 'Select ..'}, :label => 'Patient Dx')%>
	<%=f.collection_select(:pathology_classification, @pathology_dx, :c_value, :c_value, {:include_blank => 'Select ..'}, :label => 'Diagnosis/Notes')%>
  </tr>

  <tr>
  	<th>XRT?</th><td><%=f.select(:xrt_flag, %w{Y N}, {:include_blank => true}, :wraptags => 'none')%></td>
	<td colspan="2">
	<strong>T&nbsp;&nbsp;</strong><%=f.collection_select(:t_code, @tumor_T, :c_value, :c_value, {:include_blank => 'Select..'}, :wraptags => 'none')%>&nbsp;&nbsp;
	<strong>N&nbsp;&nbsp;</strong><%=f.collection_select(:n_code, @tumor_N, :c_value, :c_value, {:include_blank => 'Select..'}, :wraptags => 'none')%>&nbsp;&nbsp;
	<strong>M&nbsp;&nbsp;</strong><%=f.collection_select(:m_code, @tumor_M, :c_value, :c_value, {:include_blank => 'Select..'}, :wraptags => 'none')%>&nbsp;&nbsp;
	</td>
	<%=f.collection_select(:tumor_stage, @tumor_stage, :c_value, :c_value, {:include_blank => 'Select..'}, :label => 'Stage')%>
  </tr>
  
  <tr>
	<%=f.text_area :comments, :tdcolspan => 7, :cols => 80, :rows => 2 %>
  </tr>
  
</table>
</fieldset>
<%=raw break_clear %>

